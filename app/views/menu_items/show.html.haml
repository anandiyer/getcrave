#content_wrap
  #content
    #current_content_block
      #bread_crumbs
        =link_to("← "+@menu_item.restaurant.name, @menu_item.restaurant)
      #current_info_wrapper
        #img_column
          =image_tag "temp_image.png"
          #icons_img_wrapper
            %span.photos_inline
              =link_to "75 photos","@@"
            %span.add_photos_inline
              =link_to "add a photo","@@"
            #photos_icon &nbsp;
        #text_column
          %h1.current_title= @menu_item.name
          #stars_wrap
            .star{:data =>{:rating => 5, :model => "menu_item"}} &nbsp;
          #rating
            103 Rating | 43 Reviews
          #desc_wrap
            %strong Description:
            #description
              Lettuce, tomatoes,
            %strong Labels:
            #labels
              Gluten free
          =image_tag "social.png"
        #flag_icons
          .save_icon &nbsp;
          .flag_icon &nbsp;
      #comment_wrapper_wrapper
        #comment_wrapper
          #content_title
            Have you tied this?
          .star_gray &nbsp;
          #input_comment
            =form_for(MenuItemRating.new, :remote => true) do |f|
              =f.text_field :review
              =f.hidden_field :menu_item_id, :value =>params[:id]
    #reviews_wrapper
      %h3.review Reviews
      #sorting
        Sort by:
        =image_tag "select_box.png"
        =render :partial => "review"

  #sidebar
    #map_inside_sidebar
      =image_tag "map_temp.png"
    #foodies_wraper_wrapper
      %h4 Foodies of the week
      -for @user in User.all
        =render :partial => "foodies"





#footer
  %p footer

