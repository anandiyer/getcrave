



- labels = MenuLabel.all

= content_tag :div, :class => "label_div_wrapper" do
  = content_tag :div, " ", :class => "label_div_tri"

  = content_tag :div, :class => "label_div" do
    = content_tag :ul do
      - labels.each do |x|
        = content_tag :li, x.menu_label, :id => x.id

#current_content_block
  #bread_crumbs
    = link_to("â† "+@menu_item.restaurant.name, @menu_item.restaurant)
  #current_info_wrapper{:data => {:latitude=> @menu_item.restaurant.latitude, :longitude => @menu_item.restaurant.longitude, :menu_item_id => params[:id]}}
    #img_column
      = image_tag "temp_image.png"
      #icons_img_wrapper
        %span.photos_inline
          #gallery
            = render :partial => "gallery_link"







        %span.add_photos_inline
          =link_to "add photos","#", :id => "plupload"
        #photos_icon &nbsp;
    #text_column
      %h1.current_title= @menu_item.name
      #stars_wrap

        -#TODO: almazom. bad catching exception (((
        - begin
          - if @menu_item.menu_item_avg_rating_count
            - avg = @menu_item.menu_item_avg_rating_count.avg_rating.round
          - else
            - avg = 0
        - rescue
          - avg = 0

        -class_name ="stars_"+avg.to_s
        #star_average{:class => class_name.gsub(/[.]/, '_'), :data =>{:rating => avg}} &nbsp;
      #rating
        -if @menu_item.menu_item_avg_rating_count
          %span= @menu_item.menu_item_avg_rating_count.count
          Reviews

      #desc_wrap

        #description= @menu_item.description
        #dishlabels
          %strong Dish labels:
        #labels
          - @menu_label_association = MenuLabelAssociation.new
          = form_for(@menu_label_association, :remote => true) do |f|
            = f.hidden_field :menu_item_id, :value => params[:id]
            = f.hidden_field :menu_label_id
            = f.hidden_field :user_id, :value => current_user.id

          .birdy_update
            = render :partial => "labels_list"
          .plus &nbsp;
          =link_to( "Add a label", "#", :class => :mi_add_label)

      -#=image_tag "social.png"
      #social
        :erb
          <iframe src="http://www.facebook.com/plugins/like.php?app_id=177216185667399&amp;href=getcrave.com<%=request.request_uri%>&amp;send=false&amp;layout=button_count&amp;width=50&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=arial&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:150px; height:21px;" allowTransparency="true"></iframe>

    = render :partial => "/save"


  #comment_wrapper_wrapper
    #comment_wrapper
      #content_title
        Have you tried this?
      =form_for(MenuItemRating.new, :remote => true) do |f|
        =f.hidden_field :rating
        =f.hidden_field :menu_item_id, :value =>params[:id]
        .star_gray{:id => params[:id], :data =>{:model => "user_menu_item_ratings"}} &nbsp;
        #input_comment
          =f.text_field :review
          =f.hidden_field :menu_item_id, :value =>params[:id]
