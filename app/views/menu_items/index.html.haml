#content
  #current_content_block
    #bread_crumbs
      =link_to("â† "+"back to results", "#")
    #current_info_wrapper.restaurant{:data => {:latitude=> @restaurant.latitude, :longitude => @restaurant.longitude}}
      #img_column.himportant
        =image_tag "temp_image.png"
        #icons_img_wrapper
          %span.photos_inline
            =link_to "75 photos","@@"
          %span.add_photos_inline
            =link_to "add photos","@@"


          #photos_icon &nbsp;
      #text_column.restaurant
        %h1.current_title= @restaurant.name

        #desc_wrap_rest
          #description
            %p= @restaurant.street_address
            %p= @restaurant.neighborhood
            %p= "#{@restaurant.city}, #{@restaurant.state} #{@restaurant.zip}"
            .phone_number
              .col1_pn
                %p (415) 927 1849
                %p= link_to "www.siet.com"
              .col2_pn
                :erb
                  <iframe src="http://www.facebook.com/plugins/like.php?app_id=177216185667399&amp;href=getcrave.com<%=request.request_uri%>&amp;send=false&amp;layout=button_count&amp;width=50&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=arial&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:150px; height:21px;" allowTransparency="true"></iframe>
                -#= image_tag "social.png"

  #reviews_wrapper.restaurant
    %h3.review
      Menu

    #select_box_hint &nbsp;
    #sorting
      #before_sort_by
        Sort by:
      #sort_by
        =text_field(:select, :sorttype, :value => "Newest", :disabled => true)
        %ul
          -["Rating", "Other"].each do |x|
            %li= x
    #reviews_wrapper
      #update_place_restaurants{:class => @controller.controller_name+"_"+@controller.action_name}
        = render :partial => "/items_grouped_by_stars"





