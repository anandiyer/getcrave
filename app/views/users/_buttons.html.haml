#buttons_wrapper.user_buttons_wrapper
  - controller.action_name == "show" ? class_name = "on" : class_name = "off"
  = link_to user_path @selected_user.id do
    #dishes_icon{:class => class_name+" dishbutton"}
      #left_side &nbsp;
      %span Reviews
      (#{@selected_user.reviews.count})
