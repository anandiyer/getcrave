.restaurant_menu_item_wrapper
  = render :partial => "/menu_items/small_thumbnail"
  .desc_block_2_col
    .b
      - if @menu_item
        %h1= link_to @menu_item.name, @menu_item
        #stars_wrap
          - begin
            - if @menu_item.menu_item_avg_rating_count
              - avg = @menu_item.menu_item_avg_rating_count.avg_rating
            - else
              - avg = 0
          - rescue
            - avg = 0
          #star_average{:class => "star_sm stars_"+stars_class_normalize(avg), :data =>{:rating => avg}} &nbsp;

        .b.i= @menu_item.description
      - else
        %h1 title
        .b.i description


    / .b.i Steve M and 3 other friends have rated this

  - if controller.controller_name != "users"
    .save_n_review_3_col
      = render :partial => "/save"
  .review_counter_for_item

    -#TODO: bad way to get exception, please refactor me ((

    - if @menu_item && !@menu_item.menu_item_avg_rating_count.nil?
      - review = @menu_item.menu_item_avg_rating_count.count

    - else
      - review = 0
    .number_rev= review
    reviews