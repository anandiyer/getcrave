<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street address</th>
    <th>Zip</th>
    <th>Country</th>
    <th>Cross street</th>
    <th></th>
    <th></th>
    <th></th>
	<th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.street_address %></td>
    <td><%= restaurant.zip %></td>
    <td><%= restaurant.country %></td>
    <td><%= restaurant.cross_street %></td>
    <td><%= link_to 'Show', restaurant %></td>
	<td><%= link_to 'Menu', restaurant_menu_items_path(restaurant) %></td>
  </tr>
<% end %>
</table>

