<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Latitude longitude</th>
    <th>Street address</th>
    <th>Neighborhood</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
    <th>Cross street</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.latitude_longitude %></td>
    <td><%= restaurant.street_address %></td>
    <td><%= restaurant.neighborhood %></td>
    <td><%= restaurant.city %></td>
    <td><%= restaurant.state %></td>
    <td><%= restaurant.zip %></td>
    <td><%= restaurant.country %></td>
    <td><%= restaurant.cross_street %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

