= image_tag "nav_left_corner.png", :class => "left_nav_corner"
= image_tag "nav_right_corner.png", :class => "right_nav_corner"
#navigation

  .fb_login
    - if current_user
      Welcome,
      = current_user.user_name
      = link_to "Sign Out", signout_path
    - else
      -#= link_to "Sign in with Facebook", "/auth/facebook"
      = link_to(image_tag("fb_login_icon.png"), "/auth/facebook", :class => "not_signed")



  -#- if current_user
  %ul
    %li.nearby=link_to "Nearby","/alpha.html"
    %li.saved=link_to "Saved", "/saved"
    %li.following=link_to "Foodies","#"
    %li.profile
      - if current_user
        =link_to "Profile", user_path(current_user.friendly_id)
      -else
        - title = "Please sign in!"
        =link_to_function("Profile", "window.show_dialog(\"#{title}\")")
