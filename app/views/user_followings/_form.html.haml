= form_for @user_following do |f|
  -if @user_following.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_following.errors.count, "error")} prohibited this user_following from being saved:"
      %ul
        - @user_following.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :following_user_id
    = f.text_field :following_user_id
  .actions
    = f.submit 'Save'
