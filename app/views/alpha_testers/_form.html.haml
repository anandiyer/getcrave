= form_for @alpha_tester do |f|
  -if @alpha_tester.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alpha_tester.errors.count, "error")} prohibited this alpha_tester from being saved:"
      %ul
        - @alpha_tester.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :facebook_id
    = f.text_field :facebook_id
  .field
    = f.label :authorized
    = f.check_box :authorized
  .actions
    = f.submit 'Save'
