  - if params[:lat] then data = {:latitude => params[:lat], :longitude => params[:long]}  else data = "" end
  %body.two-col.bp{:data => data}


    #page
      #container
        #header
          = link_to "/" do
            #logo

          #navigation_wrap= render :partial => "/navigation"

          #navigation_wrap_search
            %form{:action => search_index_path, :method => :get}

              = text_field_tag :q, params[:q], :class =>"first_search_input", :value => params[:q] ? params[:q] : ""

              = text_field(:where, :nearby, :value => "San Francisco, CA", :class =>"second_search_input")
              = image_tag "fileds_search_inputs.png", :class => "fields"
              = image_submit_tag("search_button.png", :class => "search")
              #in in
        #content_wrap
          #content
            =yield
          = render :partial => "/sidebar"
        #footer= render :partial => "/footer"

        = render :partial => "/modal_window"

