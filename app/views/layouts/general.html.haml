%html
  %head
    %title
    = javascript_include_tag "jquery-1.6.min.js", "rails"
    %script( src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript")
    = javascript_include_tag  "plugins/jquery.raty.min.js", "plugins/plupload/plupload.js", "plugins/plupload/plupload.flash.js", "plugins/plupload/plupload.html5.js", "plupload_initialize.js",  "selectivizr-min.js"
    = javascript_include_tag  "coffee"
    = include_gritter
    = gflash

    = stylesheet_link_tag "screen", "style"
    /[if IE]
      = stylesheet_link_tag "ie", "ie_style"
    = csrf_meta_tag

  - if params[:lat] then data = {:latitude => params[:lat], :longitude => params[:long]}  else data = "" end
  %body.two-col.bp{:data => data}

    #page
      #container
        #header
          #logo
            = link_to(image_tag("logo.png"),"/")
          #navigation_wrap= render :partial => "/navigation"

          #navigation_wrap_search
            %form{:action =>"#"}
              = text_field(:first, :second, :class =>"first_search_input")
              = text_field(:first, :second, :class =>"second_search_input")
              = image_tag "fileds_search_inputs.png", :class => "fields"
              = image_submit_tag("search_button.png", :class => "search")
              #in in
        #content_wrap
          #content
            =yield
          = render :partial => "/sidebar"
        #footer
          footer

